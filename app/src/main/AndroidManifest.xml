<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orion.notepro">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SubjectListActivity" android:label="Subject List" />
        <activity android:name=".view.NoteListActivity" android:label="Note List" />
        <activity android:name=".view.NoteDetailActivity" android:label="Note Detail" />
        <activity android:name=".view.SubjectDetailActivity" android:label="Subject Detail" ></activity>
    </application>

</manifest>